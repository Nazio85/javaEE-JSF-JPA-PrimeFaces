<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
        version="2.1">

    <navigation-rule>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/page/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>catalog</from-outcome>
            <to-view-id>/page/catalog.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>order</from-outcome>
            <to-view-id>/page/test.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/page/adminPanel.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>page</from-outcome>
            <to-view-id>/page/my-page.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <application>
        <resource-bundle>
            <base-name>local.message</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>

</faces-config>