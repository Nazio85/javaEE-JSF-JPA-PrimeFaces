<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
        version="2.1">

    <navigation-rule>
        <navigation-case>
            <from-outcome>main</from-outcome>
            <to-view-id>/main.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>catalog</from-outcome>
            <to-view-id>/catalogProducts.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>order</from-outcome>
            <to-view-id>/order.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/adminPanel.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>ru</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>local.message</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>

</faces-config>